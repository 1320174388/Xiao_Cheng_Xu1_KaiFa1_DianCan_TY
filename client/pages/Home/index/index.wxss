/* 掌柜推荐 */
.recommed{
  background-color: #f9f9f9; 
}
.title{
  display: block;
  width:100%;
  height: 70rpx;
  text-align: center;
  font-family: PingFangSC;
  font-size: 32rpx;
  color: #999999;
  line-height:95rpx;
}
.proList{
  display: flex;
  justify-content: space-around;
  flex-wrap:wrap;
  padding-left: 20rpx;
  padding-right: 10rpx;
}
.proList .lists{
  width:30%;
  min-height:230rpx;
  font-size:30rpx;
  text-align: center;
  margin-top:8px;
  border-radius: 6px;
  background-color: #ffffff;
  border: solid 1px #dddddd;
}
.proList .lists image{
  width:100%;
  height: 60%;
}
.lists-name{
  font-family: PingFangSC;
  font-size: 24rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #888888;
}
.lists-pric{
  font-family: PingFangSC;
  font-size: 32rpx;
  font-weight: 500;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align:center;
  color: #333333;
}
.proList .lists text{
  display: block;
}

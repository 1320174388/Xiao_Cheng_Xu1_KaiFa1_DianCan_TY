<!--导航条-->  
<view class="navbar">  
  <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">{{item}}</text>  
</view>  
  
<!--首页--> 
 <!-- 就餐订单  -->
<view hidden="{{currentTab!==0}}">  
    <view wx:for="{{orderlist}}" wx:key="{{index}}" id="panel" class="flex-column">
        <view class="flex-cell flex-row">
            <text class="flex-cell1 flex-row1">订单号</text>
            <text class="flex-cell2 flex-row2">{{item.order_number}}</text>
            <text class="flex-cell3 flex-row3">订单状态</text>
            <text wx:if="{{item.order_status == 1}}" class="flex-cell4 flex-row4">提交中</text>
            <text wx:if="{{item.order_status == 2}}" class="flex-cell4 flex-row4">已完成</text>
        </view>
        <view class="flex-row flex-cell">
            <text class="flex-cell1 flex-row1">用户ID</text>
            <text class="flex-cell2 flex-row2">{{item.user_id}}</text>
            <text class="flex-cell3 flex-row3">备注</text>
            <text type="text" class="flex-cell4 flex-row4 textHidden">{{item.order_remarks}}</text>
        </view>
        <view class="flex-row flex-cell">
            <text class="flex-cell1 flex-row1">座号</text>
            <text class="flex-cell2 flex-row2">{{item.table_id}}号桌</text>
            <text class="flex-cell3 flex-row3">下单时间</text>
            <text class="flex-cell4 flex-row4">{{item.order_time}}</text>
        </view>
        <view class="flex-row flex-cell">
            <text class="flex-cell1 flex-row5">操作</text>
            <text data-order_id="{{item.order_number}}" bindtap="orderinfo" class="flex-cell2 flex-row6">详情</text>
            <text class="flex-cell3 flex-row"></text>
            <text data-order_id="{{index}}" data-table_id="{{item.table_id}}" 
             bindtap="updateorder" class="flex-cell4 flex-row7">修改</text>
        </view>
    </view>
</view>  


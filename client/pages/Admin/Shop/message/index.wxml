<view class='edit'>
    <view class='list'>
          <text class='key'>店铺名称</text>
          <input placeholder="" auto-focus/>
    </view>
     <view class='list'>
          <text class='key'>店铺地址</text>
          <text class='maps' bindtap='maps'></text>
    </view>
    <view class='list'>
          <text class='key'>电话</text>
          <input  maxlength="11"/>
    </view>
    <view class='list'>
          <text class='key'>介绍</text>
          <textarea auto-height/>
    </view>
    <view class='pic'>
        <text class='title'>店铺图片</text>
        <view class='pics'>
            <image src='/icon/pic.jpg'></image>
            
        </view>
    </view>
    <button>确定</button>
</view>
